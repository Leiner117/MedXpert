<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/med_back_arrow"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diagnostic_title"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Weight -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_weight"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="numberDecimal"
                android:autofillHints="weight" />

            <!-- Physical Examination -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_physical_examination"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPhysicalExamination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"
                android:autofillHints="physical_examination"/>

            <!-- Medicines -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_medicines"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMedicines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewMedicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_my_medication"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D47A1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="4dp"/>

            <!-- Vital Signs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_vital_signs"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginBottom="24dp">

                <!-- Heartbeat -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHeartbeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#0D47A1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvHeartbeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60 bpm"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_heartbeat"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/lb_form_heartbeat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lb_form_heartbeat"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Temperature -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTemperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#0D47A1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="37.5 °C"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_temperature"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/lb_form_temperature" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lb_form_temperature"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Blood Pressure -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBloodPressure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#0D47A1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvBloodPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120/80 mmHg"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_blood_pressure"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/lb_form_blood_pressure" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lb_form_blood_pressure"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Oxygen Saturation -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOxygenSaturation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#0D47A1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvOxygenSaturation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98 %"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_oxygen_saturation"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/lb_form_oxygen_saturation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lb_form_oxygen_saturation"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Reason for consultation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_reason_for_consultation"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etReasonForConsultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"
                android:autofillHints="reason_for_consultation"/>

            <!-- Subjective Condition -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_subjective_condition"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSubjectiveCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"
                android:autofillHints="subjective_condition"/>

            <!-- Objective Condition -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_objective_condition"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etObjectiveCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"
                android:autofillHints="objective_condition"/>

            <!-- Analysis & Plan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lb_form_analysis_and_plan"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAnalysisPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_form_diagnostic"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|start"
                android:autofillHints="analysis_and_plan"/>

            <!-- Images -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imágenes"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvImages"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:scrollbars="horizontal" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
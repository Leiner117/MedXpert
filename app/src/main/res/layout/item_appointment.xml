<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="1dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/specialtyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ap_lbl_specialty_item"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detailsArrow" />

    <TextView
        android:id="@+id/statusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ap_lbl_status_value_item"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray_text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="@id/specialtyTextView"
        app:layout_constraintBottom_toBottomOf="@id/specialtyTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/doctorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ap_lbl_doctor_item"
        android:textSize="14sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/specialtyTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detailsArrow" />

    <ImageView
        android:id="@+id/calendarIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/ap_lbl_calendar_icon"
        android:src="@drawable/ic_calendar"
        app:layout_constraintTop_toTopOf="@id/dateTimeTextView"
        app:layout_constraintBottom_toBottomOf="@id/dateTimeTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ap_lbl_appointment_item"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/doctorTextView"
        app:layout_constraintStart_toEndOf="@id/calendarIcon"
        app:layout_constraintEnd_toStartOf="@id/detailsArrow" />

    <ImageView
        android:id="@+id/detailsArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ap_lbl_details_arrow"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

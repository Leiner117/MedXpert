<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MedXpertApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedXpert"
        tools:targetApi="31"
        android:localeConfig="@xml/locales_config">


        <!-- View Medication View -->
        <activity
            android:name=".ui.viewMedication.ViewMedicationActivity"
            android:exported="false" /> <!-- Add Medication View -->
        <activity
            android:name=".ui.addMedication.AddMedicationActivity"
            android:exported="false" />

        <!-- Medication View Patient -->
        <activity
            android:name=".ui.ViewMedicationPatient.ViewMedicationPatientActivity"
            android:exported="false" />

        <!-- Add Diagnostic View -->
        <activity android:name=".ui.addDiagnostic.AddDiagnosticActivity"
            android:exported="false" />

        <!-- Appointment View -->
        <activity
            android:name=".ui.home.DoctorFragment"
            android:exported="false" />
        <activity
            android:name=".ui.home.PatientHomeFragment"
            android:exported="false" />
        <activity
            android:name=".ui.stepper.ConsultationApproachStepper"
            android:exported="false" />
        <activity
            android:name=".ui.stepper.DoctorStepper"
            android:exported="false" />
        <activity
            android:name=".ui.stepper.WelcomeStepper"
            android:exported="false" />
        <activity
            android:name=".ui.appointment.BookAppointmentActivity"
            android:exported="false" />

        <!-- Availability View -->
        <activity
            android:name=".ui.availability.AddAvailabilityActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stepper.LaunchScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".ui.terms.TermsAndConditionsActivity"
            android:exported="true" />
        <activity android:name=".ui.codeSecurity.VerificationCodeActivity" />

        <activity
            android:name=".MainApplication.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ui.profile.patient.PatientListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.diagnostic.DiagnosticDoctorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.diagnostic.DiagnosticPatientActivity"
            android:exported="false" />

        <activity
            android:name=".ui.diagnosticInformation.DiagnosticInformationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.appointment.ListAppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.appointment.DoctorAppointmentsActivity"
            android:exported="false" />


        <!-- Notification Management -->
        <receiver android:name=".service.AppointmentNotificationReceiver" android:exported="true"/>

        <activity
           android:name=".ui.chat_profile.DoctorChatProfileActivity"
           android:exported="false" />


       <activity android:name=".ui.chat_profile.PatientChatProfileActivity"
           android:exported="false" />


   </application>

   <uses-permission android:name="android.permission.INTERNET"
       tools:ignore="ManifestOrder" />
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
   <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

   <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
   <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
   <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
   <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>